{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-tailuind": {
            "projectType": "library",
            "root": "projects/ngx-tailuind",
            "sourceRoot": "projects/ngx-tailuind/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/ngx-tailuind/tsconfig.lib.json",
                        "project": "projects/ngx-tailuind/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ngx-tailuind/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ngx-tailuind/src/test.ts",
                        "tsConfig": "projects/ngx-tailuind/tsconfig.spec.json",
                        "karmaConfig": "projects/ngx-tailuind/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/ngx-tailuind/tsconfig.lib.json",
                            "projects/ngx-tailuind/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "ngx-tailuind"
}
